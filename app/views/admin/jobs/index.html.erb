<div class="col-md-12">
  <div class="job">
    <%= link_to("Add a job", new_admin_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>Visible</td>
        <td>Title</td>
        <td>Description</td>
        </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
         <tr>

           <td><%= render_job_status(job) %></td>

           <td><%= link_to(job.title,admin_job_path(job)) %></td>
           <td><%= job.description %></td>

           <td>
                <%= link_to("Edit", edit_admin_job_path(job), class: "btn btn-sm btn-default") %>
                <%= link_to("Delete", admin_job_path(job),    class: "btn btn-sm btn-default",
                             method: :delete, data: {confirm: "Are you sure?"} ) %>

                <% if job.is_hidden %>
                   <%= link_to("Publish", publish_admin_job_path(job), :method => :post, :class =>"btn btn-xa btn-default") %>
                <% else %>
                    <%=link_to("Hide", hide_admin_job_path(job), :method => :post, :class => "btn btn-xa btn-default") %>
                <% end %>
           </td>
         </tr>
      <% end %>
    </tbody>
  </table>

  <div class="job">
    <%= link_to("Back", jobs_path, class: "btn btn-primary pull-left") %>
  </div>

</div>
