<div class="col-md-12">
  <div class="job">

    <%= link_to("提交简历", new_job_resume_path(@job), class: "btn btn-default pull-right") %>
    
    <% if current_user && current_user == @job.user %>
       <%= link_to("Edit", edit_job_path(@job), class: "btn btn-primary pull-right") %>
    <% end %>
  </div>
  <h2><%= "Job title:" %></h2>
  <h2><%= @job.title %></h2>
   <li class="divider"></li>
  <p><%= @job.description %></p>
   <li class="divider"></li>
  <p><%= @job.wage_lower_bound %></p>
   <li class="divider"></li>
  <p><%= @job.wage_upper_bound %></p>
   <li class="divider"></li>
  <p><%= @job.contact_email %></p>
</div>
